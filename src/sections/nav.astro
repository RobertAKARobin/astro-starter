---
import { getProps } from 'src/js/astro';

import { routes } from 'src/routes';

const { props, rest } = getProps(Astro.props, {
	opaqueAtTop: false,
});
---

<div
	class={`nav__dummy ${props.class}`}
	data-viewport-visible
	{...rest}
></div>

<nav
	class="nav"
	data-opaque-at-top={props.opaqueAtTop}
	data-toggle-index="0"
	data-toggle-target="nav__links"
	data-toggle-target-isdefault
>
	<div class="nav__bar"></div>

	<a
		class="nav__logo"
		href={routes.home}
	>
		<img
			alt="Logo"
			src="/img/empty.svg"
			width="225"
			height="30"
		/>
	</a>

	<div
		class="nav__links"
		data-focus-prevent="main, footer"
		data-toggle-index="1"
		data-toggle-target="nav__links"
	>
		<a
			data-active-href={routes.home}
			href={routes.home}
		>Home</a>
		<a
			data-active-href={routes.privacy}
			href={routes.privacy}
		>Privacy</a>
		<a
			data-active-href={routes.terms}
			href={routes.terms}
		>Terms</a>
	</div>

	<div
		class="nav__links__underlay"
		data-toggle-index="0"
		data-toggle-trigger="nav__links"
	></div>

	<button
		aria-hidden="true"
		class="nav__links__trigger"
		data-toggle-index="+1"
		data-toggle-trigger="nav__links"
		type="button"
	>
		<span class="button--icon">â˜°</span>
	</button>
</nav>

<style lang="scss">
@use 'src/scss/vars';

.nav {
	@include vars.expand;

	height: vars.$height--nav;
	position: fixed;
	z-index: vars.z(nav);
}

.nav[data-opaque-at-top] + :global(*) {
	margin-top: vars.$height--nav;
}

.nav__dummy {
	height: vars.$height--nav;
	left: 0;
	position: absolute;
	top: 0;
	width: 1px;
}

.nav__bar {
	background: transparent;
	height: 100%;
	position: absolute;
	top: 0;
	transition: background .2s, box-shadow .2s;
	width: 100%;
	z-index: vars.z(nav__bar);

	.nav__dummy[data-viewport-visible='false'] + .nav &,
	.nav[data-opaque-at-top] & {
		backdrop-filter: blur(5px);
		background-color: #{vars.$color--bg}FA;
		box-shadow: vars.$shadow--main;
	}
}

.nav__logo {
	z-index: vars.z(nav__logo);
}

.nav__links {
	a {
		@include vars.type(cta);

		border: 0 solid transparent;
		border-width: 2px 0;
		color: vars.$color--text;
		text-decoration: none;
		transition: border-color .2s;

		&:hover {
			border-bottom-color: vars.$color--text;
		}

		&.active-href {
			display: none;
		}
	}
}

@include vars.if-viewport('<', lg) {
	.nav__logo {
		align-items: stretch;
		display: flex;
		height: 100%;
		left: var(--content-padding-x);
		position: absolute;
		top: 0;
	}

	.nav__links__trigger {
		align-items: center;
		color: vars.$color--brand--sink;
		display: flex;
		height: 100%;
		justify-content: center;
		position: absolute;
		right: 0;
		top: 0;
		width: vars.$height--nav;
		z-index: vars.z(nav__flyout__trigger);
	}

	.nav__links {
		background: vars.$color--bg;
		box-shadow: -2px 0 5px 0 vars.$color--shadow;
		display: flex;
		flex-direction: column;
		height: 100vh;
		max-width: 300px;
		padding-top: vars.$height--nav;
		position: absolute;
		top: 0;
		transition: right .2s, left .2s;
		width: 90vw;
		z-index: vars.z(nav__flyout);

		a {
			padding: .5rem 1rem;
		}

		&:not(.toggle--on) {
			right: -300px;

			a {
				display: none;
			}
		}

		&.toggle--on {
			right: 0;
		}
	}

	.nav__links__underlay {
		@include vars.expand;

		background-color: vars.$color--shadow;
		height: 100vh;
		transition: left .2s, opacity .2s;
		width: 100vw;
		z-index: vars.z(nav__flyout__underlay);

		.nav__links.toggle--on + & {
			animation: fadein forwards .2s;
		}

		.nav__links:not(.toggle--on) + & {
			display: none;
		}
	}
}


@include vars.if-viewport('==', sm) {
	.nav__links {
		max-width: none;
		right: auto !important;
		width: 100vw;

		&:not(.toggle--on) {
			left: 100vw;
		}

		&.toggle--on {
			left: 0;
		}

		a {
			padding-left: var(--content-padding-x) !important;
		}
	}
}

@include vars.if-viewport('>=', lg) {
	.nav__logo,
	.nav__links {
		align-items: stretch;
		display: flex;
		height: 100%;
		position: absolute;
		top: 0;
	}

	.nav__logo {
		left: var(--content-padding-x);
	}

	.nav__links {
		right: var(--content-padding-x);
		z-index: vars.z(nav__links);

		a {
			align-items: center;
			display: flex;
			padding: 0 1rem;
		}
	}

	.nav__links__trigger {
		display: none;
	}
}

@media print {
	.nav {
		position: static;
	}

	.nav + :global(*) {
		margin-top: 0 !important;
	}

	.nav__links,
	.nav__flyout__trigger,
	.nav__flyout__underlay {
		display: none;
	}
}

@keyframes fadein {
	0% {
		display: none;
		opacity: 0;
	}

	1% {
		display: block;
		opacity: 0;
	}

	100% {
		opacity: 1;
	}
}
</style>
